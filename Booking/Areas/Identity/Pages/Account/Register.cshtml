@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<h1 class="text-center">Registracija</h1>

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Kreiraj novi račun</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Ime" class="form-control" autocomplete="new-Ime" aria-required="true" placeholder="Ime" />
                <label asp-for="Input.Ime">Ime</label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Prezime" class="form-control" autocomplete="new-Prezime" aria-required="true" placeholder="Prezime" />
                <label asp-for="Input.Prezime">Prezime</label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Adresa" class="form-control" autocomplete="new-Adresa" aria-required="true" placeholder="Adresa" />
                <label asp-for="Input.Adresa">Adresa</label>
                <span asp-validation-for="Input.Adresa" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.BrojTelefona" class="form-control" autocomplete="new-BrojTelefona" aria-required="true" placeholder="Broj telefona" />
                <label asp-for="Input.BrojTelefona">Broj Telefona</label>
                <span asp-validation-for="Input.BrojTelefona" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Uloga" class="form-select" asp-items="@(new SelectList(Model.SveUloge))">
                    <option value="">Odaberi ulogu</option>
                </select>
                <label asp-for="Input.Uloga">Uloga</label>
                <span asp-validation-for="Input.Uloga" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.Password" class="form-control" id="password" autocomplete="new-password" aria-required="true" placeholder="Lozinka" />
                <label asp-for="Input.Password">Lozinka</label>
                <button type="button" class="btn btn-light btn-sm position-absolute top-50 end-0 translate-middle-y me-2"
                        onclick="togglePassword('password', this)" title="Prikaži lozinku">
                    <i class="bi bi-eye-slash"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 position-relative">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="confirmPassword" autocomplete="new-password" aria-required="true" placeholder="Potvrdi lozinku" />
                <label asp-for="Input.ConfirmPassword">Potvrdi Lozinku</label>
                <button type="button" class="btn btn-light btn-sm position-absolute top-50 end-0 translate-middle-y me-2"
                        onclick="togglePassword('confirmPassword', this)" title="Prikaži lozinku">
                    <i class="bi bi-eye-slash"></i>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            

            <button type="submit" class="w-100 btn btn-lg" style="background-color: #7e57c2; color: white;">
                Registruj se
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
                btn.title = "Sakrij lozinku";
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
                btn.title = "Prikaži lozinku";
            }
        }
    </script>
}
