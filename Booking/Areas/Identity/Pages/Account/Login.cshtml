@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<h1 class="text-center">Prijava</h1>

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Koristi postojeći račun</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Lozinka</label>
                    <button type="button" class="btn btn-light btn-sm position-absolute top-50 end-0 translate-middle-y me-2"
                            onclick="togglePassword('password', this)" title="Prikaži lozinku">
                        <i class="bi bi-eye-slash"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Zapamti me?
                    </label>
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg" style="background-color: #7e57c2; color: white;">Prijavi se</button>
                </div>

                <div class="mt-3">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Ponovo pošalji email za potvrdu</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
                btn.title = "Sakrij lozinku";
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
                btn.title = "Prikaži lozinku";
            }
        }
    </script>
}
