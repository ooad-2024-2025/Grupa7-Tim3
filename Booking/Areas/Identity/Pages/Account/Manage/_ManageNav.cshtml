@inject SignInManager<Korisnik> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    string activeStyle = "background-color: #e6ccff; color: black; font-weight: 500;";
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index"
           style="@(ManageNavPages.IndexNavClass(ViewContext) == "active" ? activeStyle : null)">Profil</a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email"
           style="@(ManageNavPages.EmailNavClass(ViewContext) == "active" ? activeStyle : null)">Email</a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword"
           style="@(ManageNavPages.ChangePasswordNavClass(ViewContext) == "active" ? activeStyle : null)">Lozinka</a>
    </li>

    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins"
               style="@(ManageNavPages.ExternalLoginsNavClass(ViewContext) == "active" ? activeStyle : null)">External logins</a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData"
           style="@(ManageNavPages.PersonalDataNavClass(ViewContext) == "active" ? activeStyle : null)">Brisanje računa</a>
    </li>
</ul>
