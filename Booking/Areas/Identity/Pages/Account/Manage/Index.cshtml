@page
@model Booking.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           

            <div class="form-floating mb-3">
                <input asp-for="Input.Ime" class="form-control" placeholder="Unesite ime" />
                <label asp-for="Input.Ime"></label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Prezime" class="form-control" placeholder="Unesite prezime" />
                <label asp-for="Input.Prezime"></label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Adresa" class="form-control" placeholder="Unesite adresu" />
                <label asp-for="Input.Adresa"></label>
                <span asp-validation-for="Input.Adresa" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Unesite broj telefona" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" readonly />
                <label asp-for="Input.Email"></label>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #7e57c2; color: white;">Sačuvaj</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
